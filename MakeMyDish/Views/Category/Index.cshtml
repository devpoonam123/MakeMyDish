@model IEnumerable<MakeMyDish.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>



<table style="width:100%;border:solid;background-color:gray;color:white">

    <tr style="background-color:darkgrey">
        <th style="border:solid">Category</th>
        <th style="border:solid"></th>
        <th style="border:solid"></th>

    </tr>
    @if (Model != null)
    {
        foreach (var v in Model)
        {
            <tr>
                <td style="border:solid;width:30%">
                    @Html.DisplayFor(modelItem => v.name)
                </td>

                <td style="border:solid ;width:30%">
                </td>

                <td style="text-align:right;border:solid">
                    <button class="button button1" type="button" onclick="location.href='@Url.Action("Edit","Category",new {id=v.id })'">Edit</button>

                    @Html.ActionLink("Delete", "Delete", "Category", new { id = v.id },

               new { onclick = "return confirm('Are sure wants to delete?');" })

                <button class="button button1" type="button" onclick="location.href='@Url.Action("Details","Category",new {id=v.id })'">Details</button>
                </td>

            </tr>
        }
    }
</table>

<button class="button button1" type="button" onclick="location.href='@Url.Action("Create", "Category")'">
    Create New
</button>
@if (ViewBag.updatemessage != null && ViewBag.updatemessage != "")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.updatemessage");
        };
    </script>
}
@if (ViewBag.deletemessage != null && ViewBag.deletemessage != "")
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.deletemessage");
        };
    </script>
}

